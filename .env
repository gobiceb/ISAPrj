# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache backend: 'file', 'memory', or 'redis'
CACHE_BACKEND=file
CACHE_DIR=./.cache
CACHE_TTL_MINUTES=30

# Data source specific TTLs (in minutes)
EIA_CACHE_TTL=360
ENTSO_E_CACHE_TTL=30
ELECTRICITY_MAPS_CACHE_TTL=5
EMBER_CACHE_TTL=120
OWID_CACHE_TTL=1440
WORLD_BANK_CACHE_TTL=1440

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Default data lookback period (days)
DEFAULT_LOOKBACK_DAYS=365

# Live data lookback (hours)
LIVE_DATA_LOOKBACK_HOURS=72

# Surge alert configuration
SURGE_ALERT_THRESHOLD=20.0
SURGE_ALERT_LOOKBACK_HOURS=72

# Newsletter configuration
NEWSLETTER_GENERATION_HOUR=8
NEWSLETTER_RECIPIENTS=ops@company.com,admin@company.com
NEWSLETTER_INCLUDE_CHARTS=true

# Maximum acceptable data age (hours)
MAX_DATA_AGE_HOURS=24

# Warning threshold for stale data (hours)
STALE_DATA_WARNING_HOURS=6

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================

# Layout: 'wide' or 'centered'
STREAMLIT_LAYOUT=wide

# Live data refresh interval (seconds)
LIVE_DATA_REFRESH_INTERVAL=300

# Historical data refresh interval (seconds)
HISTORICAL_DATA_REFRESH_INTERVAL=3600

# ============================================================================
# OPTIONAL: PROXY/NETWORK CONFIGURATION
# ============================================================================

# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# ============================================================================
# DEBUGGING
# ============================================================================

DEBUG=false
VERBOSE_LOGGING=false
